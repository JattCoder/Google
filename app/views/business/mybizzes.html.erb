<%= stylesheet_link_tag "business/newbiz" %>
<%= link_to image_tag("login/close.jpg", :id=>"close_btn"), account_menu_chats_path %>
<%= image_tag("chat/google_icon.jpg", :alt => "Google", id: 'glogo') %>
<h4 id="identity">Business</h4>
<div id="nt_prt">
    <a id="biztitle">My Business</a>
    <% @bizz.each do |business| %>
        <%= form_tag selbizz_path([business.name],[business.address]) do %>
            <%= hidden_field_tag "business", business.id %>
            <%= submit_tag business.name,:class=>"biz"%>
        <% end %>
    <% end %>
    <%= form_tag addbizz_path, :method => 'GET' do %>
        <%= submit_tag "Add Business",:class=>"biz"%>
    <% end %>
    <%= form_tag mapview_path do %>
        <%= submit_tag "On Map",:class=>"biz"%>
    <% end %>
</div>